@using Kentico.PageBuilder.Web.Mvc
@using Njh.Mvc.Models.SectionProperties
@using Kentico.Content.Web.Mvc
@using Njh.Mvc.Models.SectionsViewModels

@model TwoColumn6733SectionViewModel



<section class="widget-zone bg @Model.GetThemeCssClass() @Model.GetPaddingCssClass() has-margin" style="@Model.GetBackgroundColor() @Model.GetTextColor()">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3">
            <div class="col col-md-@Model.FirstColumnSize">
                <widget-zone allowed-widgets="AllowedComponents.ALL" id="first"></widget-zone>
            </div>
            <div class="col col-md-@Model.SecondColumnSize">
                <widget-zone allowed-widgets="AllowedComponents.ALL" id="second"></widget-zone>
            </div>
        </div>
    </div>
</section>
